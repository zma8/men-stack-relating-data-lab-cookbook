<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Recipes</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="container">
        <h1>Welcome to My Recipes</h1>
        
        <div class="actions" >
            <a href="/recipes/new" class="btn">+ Add Recipe</a>
            <a href="/ingredients" class="btn btn-secondary">Manage Ingredients</a>
        </div>
        
        <% if (recipes && recipes.length > 0) { %>
            <div class="recipe-list">
                <% recipes.forEach((recipe) => { %>
                    <div class="card">
                        <a href="/recipes/<%= recipe._id %>" >
                            <h3><%= recipe.name %></h3>
                            <p >
                                By <%= recipe.owner.username %>
                            </p>
                            <% if (recipe.ingredients && recipe.ingredients.length > 0) { %>
                                <p>
                                    <%= recipe.ingredients.length %> ingredient<%= recipe.ingredients.length !== 1 ? 's' : '' %>
                                </p>
                            <% } %>
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="card" >
                <p >No recipes found yet.</p>
                <a href="/recipes/new" class="btn">Create Your First Recipe!</a>
            </div>
        <% } %>
    </div>
</body>
</html>