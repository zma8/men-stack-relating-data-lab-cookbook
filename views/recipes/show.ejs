<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= recipe.name %> - Recipe Details</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="container">
        <h1><%= recipe.name %></h1>
        
        <div class="recipe-details">
            <p >
                Created by <%= recipe.owner.username %></strong>
            </p>
            
            <div class="card">
                <h2>Ingredients</h2>
                <% if (recipe.ingredients && recipe.ingredients.length > 0) { %>
                    <div class="ingredients-list">
                        <% recipe.ingredients.forEach(ingredient => { %>
                            <span class="ingredient-tag">
                                <% if (typeof ingredient === 'object' && ingredient.name) { %>
                                    <%= ingredient.name %>
                                <% } else { %>
                                    <%= ingredient %>
                                <% } %>
                            </span>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p >No ingredients listed.</p>
                <% } %>
            </div>
            
            <div class="card">
                <h2>Instructions</h2>
                <div class="instructions">
                    <%= recipe.instructions %>
                </div>
            </div>
            
            <div class="actions">
                <a href="/recipes" class="btn btn-secondary">Back to Recipes</a>
                
                <% if (user && recipe.owner._id=== user._id) { %>
                    <a href="/recipes/<%= recipe._id %>/edit" class="btn">Edit Recipe</a>
                    <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn-danger" >
                            Delete Recipe
                        </button>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>